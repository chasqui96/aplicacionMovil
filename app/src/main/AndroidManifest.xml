<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clinica"  xmlns:tools="http://schemas.android.com/tools">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/logofinal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logofinal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"   android:debuggable="true" tools:ignore="HardcodedDebugMode">
        <activity android:name=".Views.Activity.HistorialReservaActivity"></activity>
        <activity android:name=".Views.Activity.ReservaTurnoActivity" />
        <activity android:name=".Views.Activity.HistorialCupoActivity" />
        <activity android:name=".Views.Activity.CupoHorarioActivity" />
        <activity android:name=".Views.Activity.CupoActivity" />
        <activity android:name=".Views.Activity.EspecialidadActivity" />
        <activity android:name=".Views.Activity.IndexEspecialidadActivity" />
        <activity android:name=".Views.Activity.IndexPacienteActivity" />
        <activity android:name=".Views.Activity.IndexPersonalActivity" />
        <activity android:name=".Views.Activity.DoctorActivity" />
        <activity android:name=".Views.Activity.PacienteActivity" />
        <activity
            android:name=".Views.Activity.LoginActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Views.Activity.RegistroActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Views.Activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.Activity.CargaActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_carga"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.Activity.CursoDetalleActivity"
            android:parentActivityName=".Views.Activity.PrincipalActivity" />
        <activity
            android:name=".Views.Activity.CategoriasActivity"
            android:parentActivityName=".Views.Activity.PrincipalActivity" />
        <activity
            android:name=".Views.Activity.CategoriaDetalleActivity"
            android:parentActivityName=".Views.Activity.CategoriasActivity" />
        <activity
            android:name=".Views.Activity.ProfesorDetalleActivity"
            android:parentActivityName=".Views.Activity.ProfesorActivity" />
        <activity
            android:name=".Views.Activity.PerfilActivity"
            android:parentActivityName=".Views.Activity.PrincipalActivity" />
        <activity
            android:name=".Views.Activity.EditarPerfilActivity"
            android:parentActivityName=".Views.Activity.PerfilActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>