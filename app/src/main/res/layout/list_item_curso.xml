<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/icno_curso"
                android:id="@+id/imgIcono"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo del curso"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"/>

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="DescripciÃ³n del curso"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfesor"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/profesor"
                        />

                    <TextView
                        android:id="@+id/tvNombreProfesor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del profesor"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
