<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/usuarionuevo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rictvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USUARIO NAME"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rictvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este Usuario es Luis"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rictvApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero de Cedula"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/rictvCi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero de Cedula"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/rictvTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo Persona"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


